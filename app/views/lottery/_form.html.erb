<%= form_with(url: lottery_index_path, method: "post", local: true, multipart: true, class: "mt-4") do |form| %>
  <div class="form-group">
    <%= form.label :csv_file, "Upload CSV File:" %>
    <%= form.file_field :csv_file, class: "form-control-file", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :winning_number, "Winning Number:" %>
    <%= form.text_field :winning_number, class: "form-control", required: true %>
  </div>

  <div class="text-center">
    <%= form.submit "Calculate Winnings", class: "btn btn-primary mt-1" %>
  </div>
<% end %>
